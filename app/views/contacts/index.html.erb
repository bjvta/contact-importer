<h1>Contacts</h1>

<table class='table table-bordered'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Card</th>
            <th>Network Card</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% @contacts.each do |contact| %>
            <tr>
                <td><%= contact.id %></td>
                <td><%= contact.name %></td>
                <td><%= contact.birthday %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.address %></td>
                <td>**** <%= contact.credit_card_last_for_digit %></td>
                <td><%= contact.credit_card_network %></td>
                <td><%= contact.email %></td>
            </tr>    
        <% end %>
    </tbody>
</table>

<%= paginate @contacts %>
